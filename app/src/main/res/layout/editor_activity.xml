<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.inventoryapp.EditorActivity">

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_name"
        android:text="Name : "
        android:textSize="25sp"
        android:textColor="#388E3C"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_edit_view"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_name"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#388E3C"
        android:text="Quantity : "
        android:layout_marginTop="10dp"
        android:layout_below="@id/item_name"
        android:layout_marginStart="10dp"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:id="@+id/add_button"
        android:layout_below="@id/name_edit_view"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/quantity" />

    <TextView
        android:id="@+id/quantity_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_below="@id/name_edit_view"
        android:layout_toRightOf="@id/add_button"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="0"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        android:layout_marginTop="10dp"
        android:id="@+id/sub_button"
        android:layout_below="@id/name_edit_view"
        android:layout_toRightOf="@id/quantity_int"
        />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:textSize="25sp"
        android:text="Price : "
        android:textStyle="bold"
        android:textColor="#388E3C"
        android:layout_below="@id/quantity"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/price_int"
        android:layout_below="@id/add_button"
        android:layout_toRightOf="@id/price"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/supplier_name"
        android:textSize="25sp"
        android:textColor="#388E3C"
        android:text="Supplier : "
        android:textStyle="bold"
        android:layout_below="@id/price"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/supplier_name_edit"
        android:layout_below="@id/price_int"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/price"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:inputType="phone"
        android:id="@+id/supplier_phone_edit"
        android:layout_below="@id/supplier_name_edit"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/price"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="abc@xyz.com"
        android:inputType="textEmailAddress"
        android:id="@+id/supplier_email_edit"
        android:layout_below="@id/supplier_phone_edit"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/price"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="Add Item"
        android:padding="15dp"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORDER MORE"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:padding="15dp"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"/>

</RelativeLayout>
